<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UploadActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_gravity="center_vertical"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:background="@drawable/lavender_border"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/mein_stundenzettel"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/date_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/lavender_border"
            android:ems="12"
            android:gravity="center"
            android:inputType="date"
            android:minHeight="48dp"
            android:text="Click to pick date"
            android:textColor="@color/green1"
            android:textColorHighlight="@color/green1"
            android:textColorHint="@color/green1"
            android:textSize="17sp"
            tools:ignore="HardcodedText,MissingConstraints,TextViewEdits" />

        <Spinner
            android:id="@+id/therapy_spinner"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ems="12"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:hint="Therapy"
            android:inputType="text"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:layout_marginBottom="5dp"
            android:background="@drawable/lavender_border"
            tools:ignore="HardcodedText"/>


        <EditText
            android:id="@+id/duration_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:autofillHints=""
            android:background="@drawable/lavender_border"
            android:ems="12"
            android:gravity="center"
            android:hint="Dauer in Minuten"
            android:inputType="number"
            android:minHeight="48dp"
            android:textColorHint="@color/green1"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/notes_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/lavender_border"
            android:ems="12"
            android:gravity="center"
            android:hint="Notizen"
            android:inputType="textMultiLine"
            android:minHeight="48dp"
            android:textColorHint="@color/green1"
            tools:ignore="Autofill,HardcodedText" />

        <Button
            android:id="@+id/add_Button"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="100dp"
            android:text="Speichern"
            android:textAllCaps="false"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    </androidx.cardview.widget.CardView>
</ScrollView>